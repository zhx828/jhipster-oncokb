<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Treatment.
    -->
    <changeSet id="20161114220256-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="treatments_id"
                                 baseTableName="treatment_drugs"
                                 constraintName="fk_treatment_drugs_treatments_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>
        <addForeignKeyConstraint baseColumnNames="drugs_id"
                                 baseTableName="treatment_drugs"
                                 constraintName="fk_treatment_drugs_drugs_id"
                                 referencedColumnNames="id"
                                 referencedTableName="drug"/>
        
        <addForeignKeyConstraint baseColumnNames="treatments_id"
                                 baseTableName="treatment_approved_indications"
                                 constraintName="fk_treatment_approved_indications_treatments_id"
                                 referencedColumnNames="id"
                                 referencedTableName="treatment"/>
        <addForeignKeyConstraint baseColumnNames="approved_indications_id"
                                 baseTableName="treatment_approved_indications"
                                 constraintName="fk_treatment_approved_indications_approved_indications_id"
                                 referencedColumnNames="id"
                                 referencedTableName="approved_indication"/>
        
    </changeSet>
</databaseChangeLog>
